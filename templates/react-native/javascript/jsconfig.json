{
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["ES7"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@api": ["src/api"],
      "@components": ["src/components"],
      "@shared": ["src/components/shared"],
      "@bottomSheets": ["src/components/bottomSheets"],
      "@config": ["src/config"],
      "@constants": ["src/constants"],
      "@data": ["src/data"],
      "@helpers": ["src/helpers"],
      "@hooks": ["src/hooks"],
      "@state": ["src/recoil/hooks"],
      "@schemas": ["src/schemas"],
      "@screens": ["src/screens"],
      "@storage": ["src/storage"],
      "@theme": ["src/theme"],
      "@type/*": ["src/types/*"],
      "@env": ["src/env"],
      "@atoms": ["src/recoil/atoms"]
    }
  }
}
